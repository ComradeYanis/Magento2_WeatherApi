<?xml version="1.0"?>

<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="comradeyanis_weather" resource="default" engine="innodb" comment="Weather">
        <column name="id" xsi:type="int" padding="10" unsigned="true" nullable="false" identity="true" comment="ID" />
        <column name="name" xsi:type="varchar" length="255" nullable="true" comment="City" />
        <column name="description" xsi:type="text" nullable="true" comment="Description" />
        <column name="temp" xsi:type="varchar" length="100" nullable="true" comment="Temp" />
        <column name="pressure" xsi:type="varchar" length="100" nullable="true" comment="Pressure" />
        <column name="humidity" xsi:type="varchar" length="100" nullable="true" comment="humidity" />
        <column name="tempmax" xsi:type="varchar" length="100" nullable="true" comment="Temp max" />
        <column name="wind_speed" xsi:type="varchar" length="10" nullable="true" comment="wind speed" />
        <column name="created_at" xsi:type="timestamp" on_update="false" nullable="false" default="CURRENT_TIMESTAMP"
                comment="Created At" />
        <column name="updated_at" xsi:type="timestamp" on_update="true" nullable="false" default="CURRENT_TIMESTAMP"
                comment="Update At"/>

        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="id"/>
        </constraint>
    </table>
</schema>
